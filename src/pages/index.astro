---
import Layout from '../layouts/Layout.astro';
---

<Layout title="Welcome to Astro.">
  <main class="px-24 max-sm:px-5 max-w-7xl mx-auto w-full">
    <h1 class="text-6xl text-teal-900 font-bold mb-5">
      Rhythm Nation Blog
    </h1>
