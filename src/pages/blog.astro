---
import { getCollection } from 'astro:content';
import Layout from '../layouts/Layout.astro';
import PostList from '../components/PostList.astro';

const allPosts = await getCollection('posts');
---

<Layout title="Blog - Astro Course">
  <main class="px-24 max-sm:px-5 max-w-7xl mx-auto w-full">
    <h1 class="text-6xl text-teal-900 font-bold md-5">
      Rhythm Nation Blog
    </h1>
    <p class="text-zinc-900 text-2xl mb-24 max-sm:mb-14">
      Join the community and learn from Music Producers and
      Enthusiasts
    </p>
    <PostList posts={allPosts} />
  </main>
</Layout>
